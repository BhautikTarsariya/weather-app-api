generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  favorites Favorite[]
}

model Favorite {
  id     Int    @id @default(autoincrement())
  city   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}
